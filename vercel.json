{
    "version": 2,
   "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/ecommerce_frontend"
      }
    },
    {
        "src": "api/json-server.js",
        "use": "@vercel/node"
      }
  ],
    "rewrites": [
        {
          "source": "/(.*)",
          "destination": "/index.html"
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/json-server.js"
          }
      ],
    "cleanUrls": true,
    "trailingSlash": false
  }
  